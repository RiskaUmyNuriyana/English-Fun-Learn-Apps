<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="320dp"
        android:background="@drawable/bg_white_round_8dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="match_parent"
            android:text="Your practice has been completed"
            android:gravity="center"
            android:paddingBottom="32dp"
            android:paddingTop="18dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_blue_round_8dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <LinearLayout
            android:id="@+id/recycle"
            android:background="@color/white"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:paddingRight="16dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="-16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2">

            <TextView
                android:text="Your result is :"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/nilai"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result"
                    android:text="00"
                    android:layout_marginRight="-6dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="42dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/slice"
                    android:layout_toRightOf="@id/result"
                    android:text="/"
                    android:textColor="@color/blue"
                    android:textSize="56dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/total"
                    android:text="00"
                    android:textSize="42dp"
                    android:layout_marginLeft="-6dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_toRightOf="@id/slice"
                    android:layout_alignBottom="@id/slice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/status"
                android:text="ANSWER_STATUS"
                android:textSize="16dp"
                android:textColor="@color/black34"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="Back to Menu"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/bg_dark_blue_round_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/white"
                    android:text="Retry"
                    android:background="@drawable/bg_dark_blue_round_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>