<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <android.support.percent.PercentRelativeLayout
        android:clickable="true"
        android:gravity="center_vertical"
        android:id="@+id/item"
        android:layout_marginRight="8dp"
        android:layout_margin="6dp"
        android:background="@drawable/bg_white_round_8dp"
        android:layout_width="320dp"
        android:layout_height="460dp"
        >

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/image"
            app:srcCompat="@drawable/ic_alphabet"
            app:layout_widthPercent="64%"
            app:layout_heightPercent="50%"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:id="@+id/content"
            android:layout_below="@id/image"
            android:layout_margin="18dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/englishName"
                android:text="English_Name"
                android:textSize="24sp"
                android:textColor="@color/black34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pronounce"
                android:text="Pronounce"
                android:textSize="14sp"
                android:textColor="@color/blackA0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/indoName"
                android:text="Indo_Name"
                android:textSize="16sp"
                android:textColor="@color/blackA0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btnPlay"
            android:text="Play Audio"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_round_32"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/content"
            android:layout_height="wrap_content"
            android:layout_width="240dp"
            />

    </android.support.percent.PercentRelativeLayout>


</LinearLayout>