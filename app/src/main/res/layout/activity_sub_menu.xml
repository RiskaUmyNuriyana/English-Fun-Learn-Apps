<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubMenuActivity">

    <RelativeLayout
        android:id="@+id/bg_toolbar"
        android:background="@drawable/bg_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ToolbarStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/title"
            android:text="Learn"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_below="@id/bg_toolbar"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btnLearn"
            android:layout_weight="1"
            android:background="@drawable/bg_white_round_8dp"
            android:layout_width="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="2"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/ic_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Learn"
                    android:textSize="20dp"
                    android:textColor="@color/black72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
                    android:textSize="12dp"
                    android:textColor="@color/blackA0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLearnVideo"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_white_round_8dp"
            android:layout_width="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="2"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/ic_learn_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Learn Video"
                    android:textSize="20dp"
                    android:textColor="@color/black72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
                    android:textSize="12dp"
                    android:textColor="@color/blackA0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPractice"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_white_round_8dp"
            android:layout_width="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="2"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/ic_practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Practice"
                    android:textSize="20dp"
                    android:textColor="@color/black72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
                    android:textSize="12dp"
                    android:textColor="@color/blackA0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>